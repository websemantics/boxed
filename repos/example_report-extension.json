{
  "label": "PyroCMS 3 Report Extension",
  "description":"An example Report template to illustrate the usage of PyroCMS 3 Report Extension",
  "github_url" : "https://github.com/websemantics/example_report-extension",
  "img_url" : "https://avatars1.githubusercontent.com/u/323921",
  "tags" : ["streams-addon", "dashboard", "report", "laravel"],
  "accept" : "php,html,json,md",
  "form" : { 
			  		"schema": {
                        "title":"Configure your PyroCMS Report details, generate and dowbload to your project. Follow the instructions in README.md.",
                        "type":"object",
                        "properties": {
                            "vendor_name": {
                                "type":"string",
                                "title":"Vendor Name"
                            },
                            "report_name": {
                                "type":"string",
                                "title":"Report Name"
                            },
                            "description": {
                                "type":"string",
                                "title":"Description"
                            },
                            "author_name": {
                                "type":"string",
                                "title":"Author Name"
                            },
                            "email": {
                                "type":"string",
                                "title":"Email"
                            },
                            "homepage": {
                                "type":"string",
                                "title":"Homepage"
                            },
                            "license": {
                                "type":"string",
                                "title":"License",
                                "enum":["MIT","GPL","LGPL"]
                            }
                        }
                    },
                    "options": {
                        "fields": {
                            "vendor_name": {
                                "size": 40,
                                "helper": "Enter vendor name (one word with first letter in uppercase)",
                                "placeholder": "Enter vendor name"
                            },
                            "report_name": {
                                "size": 40,
                                "helper": "Enter report name (one word with first letter in uppercase)",
                                "placeholder": "Enter report name"
                            },
                            "description" : {
                                "type": "textarea",
                                "rows": 2,
                                "cols": 40
                            },
                            "author_name" : {
                                "size": 40,
                                "placeholder": "Enter author name"
                            },
                            "email" : {
                                "size": 40,
                                "placeholder": "Enter your email"
                            },
                            "homepage" : {
                                "placeholder": "Enter homepage URL"
                            },
                            "license": {
                                "type": "select",
                                "optionLabels": ["MIT license", "GNU General Public License (GPL)", "Lesser General Public License (LGPL)"]
                            }
                        }
                    },                    
                    "data": {
                        "vendor_name": "Anomaly",
                        "report_name": "Example",
                        "description": "An example report for the dashboard module.",
                        "license": "MIT",
                        "author_name": "AnomalyLabs, Inc.",
                        "email": "hello@anomaly.is",
                        "homepage": "http://anomaly.is/"

                    }

  		}
}
