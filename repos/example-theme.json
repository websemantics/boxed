{
  "label": "PyroCMS 3 Theme",
  "description":"An example Bootstrap Theme",
  "github_url" : "https://github.com/websemantics/pyrocms-theme",
  "img_url" : "https://raw.githubusercontent.com/pyrocms/pyrocms-theme/master/resources/img/logo.png",
  "tags" : ["streams-addon", "theme", "admin","pyrocms3"],
  "accept" : "php,html,json,md",
  "form" : { 
			  		"schema": {
                        "title":"Configure your PyroCMS Theme details, generate and dowbload to your project. Follow the instructions in README.md.",
                        "type":"object",
                        "properties": {
                            "vendor_name": {
                                "type":"string",
                                "title":"Vendor Name"
                            },
                            "theme_name": {
                                "type":"string",
                                "title":"Theme Name"
                            },
                            "type": {
                                "type":"string",
                                "title":"Theme Type",
                                "enum":["","admin"]
                            },
                            "description": {
                                "type":"string",
                                "title":"Description"
                            },
                            "author_name": {
                                "type":"string",
                                "title":"Author Name"
                            },
                            "email": {
                                "type":"string",
                                "title":"Email"
                            },
                            "homepage": {
                                "type":"string",
                                "title":"Homepage"
                            },
                            "license": {
                                "type":"string",
                                "title":"License",
                                "enum":["MIT","GPL","LGPL"]
                            }
                        }
                    },
                    "options": {
                        "fields": {
                            "vendor_name": {
                                "size": 40,
                                "helper": "Enter vendor name (one word with first letter in uppercase)",
                                "placeholder": "Enter vendor name"
                            },
                            "theme_name": {
                                "size": 40,
                                "helper": "Enter theme name (one word with first letter in uppercase)",
                                "placeholder": "Enter theme name"
                            },
                            "type" : {
                                "type": "select",
                                "optionLabels": ["Front-end", "Admin"]
                            },
                            "description" : {
                                "type": "textarea",
                                "rows": 2,
                                "cols": 40
                            },
                            "author_name" : {
                                "size": 40,
                                "placeholder": "Enter author name"
                            },
                            "email" : {
                                "size": 40,
                                "placeholder": "Enter your email"
                            },
                            "homepage" : {
                                "placeholder": "Enter homepage URL"
                            },
                            "license": {
                                "type": "select",
                                "optionLabels": ["MIT license", "GNU General Public License (GPL)", "Lesser General Public License (LGPL)"]
                            }
                        }
                    },                    
                    "data": {
                        "vendor_name": "Anomaly",
                        "theme_name": "Default",
                        "type": "",
                        "description": "An example theme.",
                        "license": "MIT",
                        "author_name": "AnomalyLabs, Inc.",
                        "email": "hello@anomaly.is",
                        "homepage": "http://anomaly.is/"

                    }

  		}
}
